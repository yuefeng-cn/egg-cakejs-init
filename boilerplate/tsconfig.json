{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es6", "dom", "esnext"],
    "types": ["reflect-metadata", "mocha", "egg"],
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "charset": "utf8",
    "allowJs": false,
    "pretty": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,
    "allowUnusedLabels": false,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "typeRoots": ["./typings"]
  },
  "exclude": [
    "app/public",
    "app/views",
    "node_modules*"
  ]
}
